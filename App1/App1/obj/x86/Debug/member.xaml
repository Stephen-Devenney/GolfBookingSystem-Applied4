<Page
    x:Class="App1.member"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#FF48DE39" Offset="1"/>
                <GradientStop Color="#FF37CAD9" Offset="0.074"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>

            <RowDefinition Height="0.15*" />

            <RowDefinition Height="0.85*" />

        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#FFBC7FDE">

            <TextBlock x:ConnectionId='7' Name="membersLogin" Text="Members Page Login"  
            TextAlignment="Center" VerticalAlignment="Center"  FontSize="30"  
            FontWeight="Bold" SelectionHighlightColor="#FF816A1C" FontFamily="Harrington" Foreground="#FF191402" Margin="0,0,-10,-30"/>

        </Border>

        <StackPanel x:ConnectionId='1' x:Name="stackone" Grid.Row="1">

            <TextBox x:ConnectionId='2' x:Name="memberNoEntered" PlaceholderText="Enter MemberNumber" Width="300"  
            Margin="0,50,0,0"></TextBox>

            <TextBox x:ConnectionId='3' x:Name="passwordEntered" PlaceholderText="Enter Password"  
            Width="300" Margin="0,10,0,0"></TextBox>

            <RelativePanel HorizontalAlignment="Center"  
            Margin="0,10,0,0">

                <Button x:ConnectionId='5' x:Name="loginbtn" Content="Login"  
                Height="35" Width="65"                       ></Button>

                <Button x:ConnectionId='6' x:Name="cancelbtn" Content="Cancel"  
                Height="35" Width="65" Margin="10,0,0,0"  
                RelativePanel.RightOf="loginbtn"                        ></Button>

            </RelativePanel>
            <TextBlock x:ConnectionId='4' x:Name="tblDisplay" TextWrapping="Wrap" Text="" Height="52"/>

        </StackPanel>

    </Grid>
</Page>

